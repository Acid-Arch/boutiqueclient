# Client Portal Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# Environment
# =============================================================================
NODE_ENV=development
CHATBOT_MODE=development-local

# =============================================================================
# Development Flags  
# =============================================================================
DISABLE_LOGIN_PAGE=false
TEST_CLIENT_USER_EMAIL=sarah.marketing@techstartup.co

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=disable&connect_timeout=30"
DB_HOST="your-db-host"
DB_PORT="5432"
DB_NAME="your-db-name"
DB_USER="your-db-user"
DB_PASSWORD="your-secure-password"
DB_SSL_MODE="disable"
DB_CONNECT_TIMEOUT="30"

# Database Pool Configuration (Production Security)
DB_POOL_MAX="20"
DB_POOL_MIN="5"
DB_IDLE_TIMEOUT="30000"
DB_CONNECTION_TIMEOUT="5000"
DB_STATEMENT_TIMEOUT="30000"
DB_QUERY_TIMEOUT="30000"

# Database SSL Configuration (Production)
DB_SSL_CA_CERT=""
DB_SSL_CLIENT_CERT=""
DB_SSL_CLIENT_KEY=""

# =============================================================================
# Application Configuration
# =============================================================================
PUBLIC_APP_NAME="Client Portal"

# =============================================================================
# Prisma Configuration
# =============================================================================
PRISMA_ENGINES_CHECKSUM_IGNORE_MISSING=1
PRISMA_ENGINE_TYPE=wasm

# =============================================================================
# Port Configuration
# =============================================================================
PORT=5173
PUBLIC_WS_PORT=8743
PREVIEW_PORT=4874
TEST_PORT=5877

# =============================================================================
# URLs
# =============================================================================
PUBLIC_APP_URL="http://localhost:5173"
PUBLIC_WS_URL="ws://localhost:8743"
DEV_SERVER_URL="http://localhost:5173"
WEBSOCKET_URL="ws://localhost:5173"
PRODUCTION_BASE_URL="https://your-domain.com"

# =============================================================================
# WebSocket Configuration
# =============================================================================
PUBLIC_CHATBOT_WEBSOCKET_HOST=localhost
PUBLIC_CHATBOT_WEBSOCKET_PORT=8743
CHATBOT_WEBSOCKET_PORT=8743

# =============================================================================
# Google OAuth Configuration
# =============================================================================
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_OAUTH_REDIRECT_URI="http://localhost:5173/auth/callback/google"
OAUTH_DEVELOPMENT_CALLBACK="http://localhost:5173/api/auth/oauth/google?action=callback"
COOKIE_DOMAIN="localhost"

# =============================================================================
# Auth.js Configuration - MUST GENERATE NEW 32-BYTE SECRET
# =============================================================================
AUTH_SECRET="generate-a-secure-32-byte-secret-with-crypto-randomBytes"
NEXTAUTH_SECRET="generate-a-secure-32-byte-secret-with-crypto-randomBytes"
AUTH_URL="http://localhost:5173"
NEXTAUTH_URL="http://localhost:5173"

# =============================================================================
# HikerAPI Configuration
# =============================================================================
HIKER_API_KEY=your-hiker-api-key
HIKER_BASE_URL=https://hikerapi.com
HIKER_TIMEOUT=30000
HIKER_RATE_LIMIT_PER_SECOND=11
HIKER_BURST_CAPACITY=20
HIKER_RETRY_ATTEMPTS=3
HIKER_RETRY_DELAY=5000
HIKER_BUDGET_DAILY=10.00
HIKER_COST_PER_UNIT=0.001
HIKER_ALERT_THRESHOLD=0.8
HIKER_EMERGENCY_STOP_THRESHOLD=0.95
HIKER_API_MOCK_MODE=false
HIKER_API_TEST_USERNAME=therock
HIKER_API_LOG_LEVEL=info

# =============================================================================
# External API Services
# =============================================================================
AVATAR_API_URL="https://api.dicebear.com/7.x/initials/svg"
AVATAR_FALLBACK_URL="https://api.dicebear.com/7.x/initials/svg?seed=user&size=80&backgroundColor=6b7280&textColor=ffffff"
